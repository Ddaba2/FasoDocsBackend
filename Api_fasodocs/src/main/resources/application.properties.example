# Configuration de l'application FasoDocs - EXEMPLE
# Copiez ce fichier vers application.properties et remplacez les valeurs

spring.application.name=fasodocs-backend

# Configuration du serveur
server.port=8080
server.servlet.context-path=/api

# Configuration de la base de données MySQL
spring.datasource.url=jdbc:mysql://localhost:3306/FasoDocs?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=

# Configuration JPA/Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Configuration JWT
jwt.secret=CHANGEZ_CE_SECRET_PAR_UNE_CLE_LONGUE_ET_ALEATOIRE_MINIMUM_64_CARACTERES
jwt.expiration=86400000
jwt.refresh-expiration=604800000

# Configuration Email (Gmail)
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=VOTRE_EMAIL@gmail.com
spring.mail.password=VOTRE_MOT_DE_PASSE_APPLICATION_GMAIL
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# Configuration Orange SMS API pour le Mali
# IMPORTANT: Mettre à true SEULEMENT avec des credentials Orange valides
# En mode false, les codes SMS apparaissent dans les logs du serveur (mode développement)
orange.sms.enabled=false
orange.sms.base.url=https://api.orange.com/smsmessaging/v1
orange.sms.client.id=VOTRE_CLIENT_ID_ORANGE
orange.sms.client.secret=VOTRE_CLIENT_SECRET_ORANGE
orange.sms.authorization.header=BASE64_DE_CLIENT_ID_CLIENT_SECRET
orange.sms.application.id=VOTRE_APPLICATION_ID_ORANGE
orange.sms.sender.address=tel:+223XXXXXXXX
orange.sms.sender.name=FasoDocs

# Configuration des fichiers uploadés
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Configuration de la langue par défaut
app.default-language=fr
app.supported-languages=fr,bm

# Configuration Djelia AI pour traduction et synthèse vocale Bambara
# IMPORTANT: Utilise le backend Python Flask comme proxy vers Djelia AI
djelia.ai.enabled=true
djelia.ai.api.key=VOTRE_CLE_API_DJELIA
# URL du backend Python Flask (pas l'API Djelia directe)
djelia.ai.base.url=http://localhost:5000/api
djelia.ai.timeout=60000
djelia.ai.cache.enabled=true
djelia.ai.cache.duration=24h

# Configuration CORS
app.cors.allowed-origins=http://localhost:*,http://127.0.0.1:*,http://10.0.2.2:*,http://192.168.*:*

# Configuration Swagger/OpenAPI
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.operationsSorter=method

# Initialisation automatique des données
app.init.data=true

# Logging
logging.level.root=INFO
logging.level.ml.fasodocs.backend=DEBUG
logging.level.ml.fasodocs.backend.controller.ChatbotController=DEBUG
logging.level.ml.fasodocs.backend.controller.DjeliaAIController=DEBUG
logging.level.ml.fasodocs.backend.service.DjeliaAIService=DEBUG
logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.web=DEBUG
logging.level.org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping=TRACE

