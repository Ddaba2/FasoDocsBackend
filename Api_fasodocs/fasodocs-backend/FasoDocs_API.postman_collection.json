{
  "info": {
    "name": "FasoDocs API",
    "description": "Collection Postman pour tester l'API FasoDocs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentification",
      "item": [
        {
          "name": "Inscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Traoré\",\n  \"prenom\": \"Amadou\",\n  \"email\": \"amadou.traore@example.com\",\n  \"telephone\": \"76123456\",\n  \"motDePasse\": \"Password123\",\n  \"languePreferee\": \"fr\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/inscription",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "inscription"]
            }
          }
        },
        {
          "name": "Connexion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifiant\": \"amadou.traore@example.com\",\n  \"motDePasse\": \"Password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/connexion",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "connexion"]
            }
          }
        },
        {
          "name": "Voir Profil",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/auth/profil",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "profil"]
            }
          }
        }
      ]
    },
    {
      "name": "Procédures",
      "item": [
        {
          "name": "Liste des procédures",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/procedures",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "procedures"]
            }
          }
        },
        {
          "name": "Détails d'une procédure",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/procedures/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "procedures", "1"]
            }
          }
        },
        {
          "name": "Rechercher procédures",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/procedures/rechercher?q=carte",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "procedures", "rechercher"],
              "query": [
                {
                  "key": "q",
                  "value": "carte"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Mes notifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/notifications",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "notifications"]
            }
          }
        },
        {
          "name": "Notifications non lues",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/notifications/non-lues",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "notifications", "non-lues"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE"
    }
  ]
}
